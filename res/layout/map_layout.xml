            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Drink"
            android:layout_weight="1"
            android:background="#000000"
            android:textColor="#ff00ff"
            android:onClick="onRadioButtonClicked"/>
           
s
